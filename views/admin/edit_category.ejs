<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Edit a category</h2>
<a href="/admin/categories" class="btn btn-outline-primary">Back to all categories</a>
<br><br>

<form method="post" action="/admin/categories/edit-category/<%= id %>">
    <div class="form-group">
        <label for="">Title</label>
        <input class="form-control" type="text" name="title" value="<%= title %>" placeholder="Title">
    </div>

    <button class="btn btn-outline-primary">Submit</button>
</form>

<%- include('../_layouts/adminfooter') %>